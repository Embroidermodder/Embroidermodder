<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.embroidermodder.embroideryviewer.ShareFragment"
    android:id="@+id/saveLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <View
        android:id="@+id/background_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="-8dp"
        android:layout_marginRight="8dp"
        android:background="#AAA"
        app:layout_constraintBottom_toBottomOf="@+id/radioHus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="8dp" />

    <View
        android:id="@+id/shadow_fragment"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@drawable/dropshadow"
        app:layout_constraintTop_toBottomOf="@+id/background_view" />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="83dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeShareDrawable"
        android:layout_marginRight="8dp" />

    <RadioButton
        android:id="@+id/radioExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_exp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioXxx" />

    <RadioButton
        android:id="@+id/radioXxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_xxx"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioJef" />


    <EditText
        android:id="@+id/textviewFilename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@android:string/unknownName"
        app:layout_constraintEnd_toStartOf="@+id/shareButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radioJef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_jef"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioDst" />

    <RadioButton
        android:id="@+id/radioDst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_dst"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewFilename" />

    <RadioButton
        android:id="@+id/radioSvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_svg"
        app:layout_constraintStart_toEndOf="@+id/radioDst"
        app:layout_constraintTop_toBottomOf="@+id/textviewFilename" />

    <RadioButton
        android:id="@+id/radioPcs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_pcs"
        app:layout_constraintStart_toEndOf="@+id/radioDst"
        app:layout_constraintTop_toBottomOf="@+id/radioSvg"
        android:layout_marginLeft="8dp" />

    <RadioButton
        android:id="@+id/radioSew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_sew"
        app:layout_constraintStart_toEndOf="@+id/radioDst"
        app:layout_constraintTop_toBottomOf="@+id/radioPcs"
        android:layout_marginLeft="8dp" />

    <RadioButton
        android:id="@+id/radioVp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_vp3"
        app:layout_constraintStart_toEndOf="@+id/radioDst"
        app:layout_constraintTop_toBottomOf="@+id/radioSew"
        android:layout_marginLeft="8dp" />

    <RadioButton
        android:id="@+id/radioPes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_pes"
        app:layout_constraintStart_toEndOf="@+id/radioSvg"
        app:layout_constraintTop_toBottomOf="@+id/textviewFilename" />

    <RadioButton
        android:id="@+id/radioPec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_pec"
        app:layout_constraintStart_toEndOf="@+id/radioSvg"
        app:layout_constraintTop_toBottomOf="@+id/radioPes"
        android:layout_marginLeft="8dp" />

    <RadioButton
        android:id="@+id/radioShv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_shv"
        app:layout_constraintStart_toEndOf="@+id/radioSvg"
        app:layout_constraintTop_toBottomOf="@+id/radioPec"
        android:layout_marginLeft="8dp" />

    <RadioButton
        android:id="@+id/radioHus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_hus"
        app:layout_constraintStart_toEndOf="@+id/radioSvg"
        app:layout_constraintTop_toBottomOf="@+id/radioShv"
        android:layout_marginLeft="8dp" />

    <RadioButton
        android:id="@+id/radioCsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_csv"
        app:layout_constraintStart_toEndOf="@+id/radioPes"
        app:layout_constraintTop_toBottomOf="@+id/textviewFilename"
        android:layout_marginLeft="8dp" />

    <RadioButton
        android:id="@+id/radioKsm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_ksm"
        app:layout_constraintStart_toEndOf="@+id/radioPes"
        app:layout_constraintTop_toBottomOf="@+id/radioCsv"
        android:layout_marginLeft="8dp" />

    <RadioButton
        android:id="@+id/radioEmm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_emm"
        app:layout_constraintStart_toEndOf="@+id/radioPes"
        app:layout_constraintTop_toBottomOf="@+id/radioKsm"
        android:layout_marginLeft="8dp" />

    <RadioButton
        android:id="@+id/radioU01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/format_u01"
        app:layout_constraintStart_toEndOf="@+id/radioPes"
        app:layout_constraintTop_toBottomOf="@+id/radioEmm" />


</android.support.constraint.ConstraintLayout>